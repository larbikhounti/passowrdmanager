<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.password.manager.credentials.controllers.CredentialController"
            prefHeight="500.0" prefWidth="600.0"
            style="-fx-background-color: #2d2d2d; -fx-background-radius: 10;">

    <VBox spacing="20.0" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="40.0"
          AnchorPane.rightAnchor="40.0" AnchorPane.bottomAnchor="20.0">

        <!-- Title -->
        <Label text="Create Credential"
               style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>

        <!-- Credential Type Dropdown -->
        <VBox spacing="8.0">
            <Label text="Credential Type" style="-fx-text-fill: #cccccc; -fx-font-size: 14px;"/>
            <ComboBox fx:id="credentialTypeComboBox" prefWidth="520.0" promptText="Select type"
                      style="-fx-background-color: #1e1e1e; -fx-text-fill: white;"
                      onAction="#onCredentialTypeChanged"/>
        </VBox>

        <!-- Dynamic Form Container -->
        <VBox fx:id="formContainer" spacing="15.0" prefHeight="280.0">
            <!-- Forms will be loaded here dynamically -->
        </VBox>

        <!-- Save Button -->
        <HBox alignment="CENTER_RIGHT" spacing="10.0">
            <Button text="Cancel" prefWidth="100.0"
                    style="-fx-background-color: #444444; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand; -fx-padding: 10;"
                    onAction="#onCancel"/>
            <Button fx:id="saveButton" text="Save" prefWidth="100.0"
                    style="-fx-background-color: #0066cc; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand; -fx-padding: 10;"
                    onAction="#onSave"/>
        </HBox>

    </VBox>

</AnchorPane>