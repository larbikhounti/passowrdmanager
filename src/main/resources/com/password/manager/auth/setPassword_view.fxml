<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox alignment="CENTER" spacing="15.0" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.password.manager.auth.controllers.SetPasswordController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

      <Label alignment="CENTER" text="Enter Password:" style="-fx-font-size: 14px;" />
      <PasswordField fx:id="password" alignment="CENTER" maxWidth="300.0" promptText="Password" />
      <Label alignment="CENTER" text="Re-type Password:" style="-fx-font-size: 14px;" />
      <PasswordField fx:id="retypedPassword" alignment="CENTER" maxWidth="300.0" promptText="Re-type Password" />
      <Button fx:id="setPasswordBtn" mnemonicParsing="false" text="Set Password" onAction="#savePassword" />
      <Label fx:id="feedbackLabel" alignment="CENTER" text="" visible="false" style="-fx-font-size: 12px;" />


</VBox>
