<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.password.manager.auth.controllers.AuthenticationController"
        style="-fx-background-color: black;">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <Label text="Enter your password:" style="-fx-text-fill: white"/>
    <PasswordField fx:id="passwordField" promptText="Password" maxWidth="200"/>
    <Button text="Login" onAction="#handleLoginButtonAction"/>
</VBox>